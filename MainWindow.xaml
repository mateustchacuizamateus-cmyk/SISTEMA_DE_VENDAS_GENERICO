<Window x:Class="SISTEMA_DE_VENDAS_GENERICO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SISTEMA_DE_VENDAS_GENERICO"
        mc:Ignorable="d"
        Title="Sistema de Vendas Genérico" 
        Height="700" 
        Width="1200"
        WindowState="Maximized"
        Background="#F4F4F4">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Menu Lateral -->
        <Border Grid.Column="0" 
                Background="#2C3E50" 
                BorderBrush="#34495E" 
                BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- Cabeçalho do Menu -->
                <Border Background="#34495E" Height="80" Padding="20">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="SISTEMA DE VENDAS" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="txtUsuarioLogado" 
                                   FontSize="12" 
                                   Foreground="#BDC3C7"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Itens do Menu -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20,0,0">
                        <Button x:Name="btnDashboard" 
                                Content="📊 Dashboard" 
                                Height="50"
                                FontSize="14"
                                FontWeight="Bold"
                                Background="#3498DB"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnDashboard_Click"/>
                        
                        <Button x:Name="btnVendas" 
                                Content="🛒 Vendas" 
                                Height="50"
                                FontSize="14"
                                FontWeight="Bold"
                                Background="#27AE60"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnVendas_Click"/>
                        
                        <Button x:Name="btnProdutos" 
                                Content="📦 Produtos" 
                                Height="50"
                                FontSize="14"
                                FontWeight="Bold"
                                Background="#E67E22"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnProdutos_Click"/>
                        
                        <Button x:Name="btnEstoque" 
                                Content="📈 Estoque" 
                                Height="50"
                                FontSize="14"
                                FontWeight="Bold"
                                Background="#9B59B6"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnEstoque_Click"/>
                        
                        <Button x:Name="btnClientes" 
                                Content="👤 Clientes" 
                                Height="50"
                                FontSize="14"
                                FontWeight="Bold"
                                Background="#34495E"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnClientes_Click"/>
                        
                        <Button x:Name="btnFornecedores" 
                                Content="🏢 Fornecedores" 
                                Height="50"
                                FontSize="14"
                                FontWeight="Bold"
                                Background="#16A085"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnFornecedores_Click"/>
                        
                        <Button x:Name="btnRelatorios" 
                                Content="📑 Relatórios" 
                                Height="50"
                                FontSize="14"
                                FontWeight="Bold"
                                Background="#8E44AD"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnRelatorios_Click"/>
                        
                        <Button x:Name="btnUsuarios" 
                                Content="👥 Usuários" 
                                Height="50"
                                FontSize="14"
                                FontWeight="Bold"
                                Background="#2C3E50"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnUsuarios_Click"/>
                        
                        <Button x:Name="btnConfiguracoes" 
                                Content="⚙️ Configurações" 
                                Height="50"
                                FontSize="14"
                                FontWeight="Bold"
                                Background="#95A5A6"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnConfiguracoes_Click"/>
                        
                        <Separator Margin="20,10" Background="#34495E"/>
                        
                        <Button x:Name="btnSair" 
                                Content="🚪 Sair" 
                                Height="50"
                                FontSize="14"
                                FontWeight="Bold"
                                Background="#E74C3C"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnSair_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>
        
        <!-- Área de Conteúdo -->
        <Border Grid.Column="1" 
                Background="White" 
                Margin="10" 
                CornerRadius="5">
            <Frame x:Name="frameConteudo" 
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>
        </Border>
    </Grid>
</Window>
