<Page x:Class="SISTEMA_DE_VENDAS_GENERICO.Views.ClientesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Clientes"
      Background="Transparent">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- Lista de Clientes -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="5" 
                Margin="10,10,5,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Cabeçalho -->
                <Border Grid.Row="0" 
                        Background="#3498DB" 
                        CornerRadius="5,5,0,0" 
                        Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="👥 Gestão de Clientes" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        
                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal">
                            <Button x:Name="btnNovoCliente" 
                                    Content="➕ Novo Cliente" 
                                    Height="35" 
                                    Width="120"
                                    Background="#27AE60"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Margin="0,0,10,0"
                                    Click="btnNovoCliente_Click"/>
                            
                            <Button x:Name="btnEditarCliente" 
                                    Content="✏️ Editar" 
                                    Height="35" 
                                    Width="80"
                                    Background="#F39C12"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Margin="0,0,10,0"
                                    Click="btnEditarCliente_Click"/>
                            
                            <Button x:Name="btnExcluirCliente" 
                                    Content="🗑️ Excluir" 
                                    Height="35" 
                                    Width="80"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Click="btnExcluirCliente_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="1" 
                          x:Name="dgClientes" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="10"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          SelectionChanged="dgClientes_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nome" 
                                            Binding="{Binding Nome}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Telefone" 
                                            Binding="{Binding Telefone}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="Email" 
                                            Binding="{Binding Email}" 
                                            Width="150"/>
                        <DataGridTextColumn Header="Data Cadastro" 
                                            Binding="{Binding DataCadastro, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                            Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Formulário de Cadastro/Edição -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="5" 
                Margin="5,10,10,10"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="📝 Cadastro de Cliente" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,20"/>
                    
                    <!-- Nome -->
                    <TextBlock Text="Nome Completo:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtNomeCliente" 
                             Height="35" 
                             FontSize="14"
                             Margin="0,0,0,15"/>
                    
                    <!-- Telefone -->
                    <TextBlock Text="Telefone:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtTelefone" 
                             Height="35" 
                             FontSize="14"
                             Margin="0,0,0,15"/>
                    
                    <!-- Email -->
                    <TextBlock Text="Email:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtEmail" 
                             Height="35" 
                             FontSize="14"
                             Margin="0,0,0,15"/>
                    
                    <!-- Endereço -->
                    <TextBlock Text="Endereço:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtEndereco" 
                             Height="60" 
                             FontSize="14"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,20"/>
                    
                    <!-- Botões -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center">
                        <Button x:Name="btnSalvar" 
                                Content="💾 Salvar" 
                                Height="40" 
                                Width="100"
                                Background="#27AE60"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Margin="0,0,10,0"
                                Click="btnSalvar_Click"/>
                        
                        <Button x:Name="btnCancelar" 
                                Content="❌ Cancelar" 
                                Height="40" 
                                Width="100"
                                Background="#E74C3C"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="btnCancelar_Click"/>
                    </StackPanel>
                    
                    <!-- Status -->
                    <TextBlock x:Name="txtStatus" 
                               FontSize="12" 
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page> 