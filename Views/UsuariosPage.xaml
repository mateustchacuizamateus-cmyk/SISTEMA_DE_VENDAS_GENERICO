<Page x:Class="SISTEMA_DE_VENDAS_GENERICO.Views.UsuariosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Usuários"
      Background="Transparent">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- Lista de Usuários -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="5" 
                Margin="10,10,5,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Cabeçalho -->
                <Border Grid.Row="0" 
                        Background="#2C3E50" 
                        CornerRadius="5,5,0,0" 
                        Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="👥 Gestão de Usuários" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        
                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal">
                            <Button x:Name="btnNovoUsuario" 
                                    Content="➕ Novo Usuário" 
                                    Height="35" 
                                    Width="120"
                                    Background="#27AE60"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Margin="0,0,10,0"
                                    Click="btnNovoUsuario_Click"/>
                            
                            <Button x:Name="btnEditarUsuario" 
                                    Content="✏️ Editar" 
                                    Height="35" 
                                    Width="80"
                                    Background="#F39C12"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Margin="0,0,10,0"
                                    Click="btnEditarUsuario_Click"/>
                            
                            <Button x:Name="btnDesativarUsuario" 
                                    Content="🔒 Desativar" 
                                    Height="35" 
                                    Width="90"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Click="btnDesativarUsuario_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="1" 
                          x:Name="dgUsuarios" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="10"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          SelectionChanged="dgUsuarios_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nome" 
                                            Binding="{Binding Nome}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Usuário" 
                                            Binding="{Binding NomeUsuario}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="Nível de Acesso" 
                                            Binding="{Binding NivelAcesso}" 
                                            Width="140"/>
                        <DataGridTextColumn Header="Data Cadastro" 
                                            Binding="{Binding DataCadastro, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                            Width="120"/>
                        <DataGridCheckBoxColumn Header="Ativo" 
                                               Binding="{Binding Ativo}" 
                                               Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Formulário de Cadastro/Edição -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="5" 
                Margin="5,10,10,10"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="📝 Cadastro de Usuário" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,20"/>
                    
                    <!-- Nome Completo -->
                    <TextBlock Text="Nome Completo:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtNomeCompleto" 
                             Height="35" 
                             FontSize="14"
                             Margin="0,0,0,15"/>
                    
                    <!-- Nome de Usuário -->
                    <TextBlock Text="Nome de Usuário:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtNomeUsuario" 
                             Height="35" 
                             FontSize="14"
                             Margin="0,0,0,15"/>
                    
                    <!-- Senha -->
                    <TextBlock Text="Senha:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtSenha" 
                                 Height="35" 
                                 FontSize="14"
                                 Margin="0,0,0,15"/>
                    
                    <!-- Confirmar Senha -->
                    <TextBlock Text="Confirmar Senha:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtConfirmarSenha" 
                                 Height="35" 
                                 FontSize="14"
                                 Margin="0,0,0,15"/>
                    
                    <!-- Nível de Acesso -->
                    <TextBlock Text="Nível de Acesso:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbNivelAcesso" 
                              Height="35" 
                              FontSize="14"
                              Margin="0,0,0,15">
                        <ComboBoxItem Content="Vendedor"/>
                        <ComboBoxItem Content="Gerente"/>
                        <ComboBoxItem Content="Administrador"/>
                    </ComboBox>
                    
                    <!-- Descrição dos Níveis -->
                    <Border Background="#F8F9FA" 
                            BorderBrush="#E9ECEF" 
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="10"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="📋 Permissões por Nível:" 
                                       FontWeight="Bold" 
                                       FontSize="12"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="• Vendedor: Vendas e consulta de produtos" 
                                       FontSize="11" 
                                       Foreground="#6C757D"/>
                            <TextBlock Text="• Gerente: Vendas, produtos, clientes, relatórios" 
                                       FontSize="11" 
                                       Foreground="#6C757D"/>
                            <TextBlock Text="• Administrador: Acesso total ao sistema" 
                                       FontSize="11" 
                                       Foreground="#6C757D"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Usuário Ativo -->
                    <CheckBox x:Name="chkUsuarioAtivo" 
                              Content="Usuário Ativo" 
                              FontSize="14"
                              IsChecked="True"
                              Margin="0,0,0,20"/>
                    
                    <!-- Botões -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center">
                        <Button x:Name="btnSalvar" 
                                Content="💾 Salvar" 
                                Height="40" 
                                Width="100"
                                Background="#27AE60"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Margin="0,0,10,0"
                                Click="btnSalvar_Click"/>
                        
                        <Button x:Name="btnCancelar" 
                                Content="❌ Cancelar" 
                                Height="40" 
                                Width="100"
                                Background="#E74C3C"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="btnCancelar_Click"/>
                    </StackPanel>
                    
                    <!-- Status -->
                    <TextBlock x:Name="txtStatus" 
                               FontSize="12" 
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>