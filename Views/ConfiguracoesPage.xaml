<Page x:Class="SISTEMA_DE_VENDAS_GENERICO.Views.ConfiguracoesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Configurações"
      Background="Transparent">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Configurações da Empresa -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="5" 
                Margin="10,10,5,10"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="🏢 Configurações da Empresa" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,20"/>
                    
                    <!-- Nome da Empresa -->
                    <TextBlock Text="Nome da Empresa:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtNomeEmpresa" 
                             Height="35" 
                             FontSize="14"
                             Margin="0,0,0,15"/>
                    
                    <!-- Endereço -->
                    <TextBlock Text="Endereço:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtEnderecoEmpresa" 
                             Height="60" 
                             FontSize="14"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>
                    
                    <!-- Telefone -->
                    <TextBlock Text="Telefone:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtTelefoneEmpresa" 
                             Height="35" 
                             FontSize="14"
                             Margin="0,0,0,15"/>
                    
                    <!-- Email -->
                    <TextBlock Text="Email:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtEmailEmpresa" 
                             Height="35" 
                             FontSize="14"
                             Margin="0,0,0,20"/>
                    
                    <!-- Botão Salvar -->
                    <Button x:Name="btnSalvarEmpresa" 
                            Content="💾 Salvar Configurações" 
                            Height="40" 
                            Background="#27AE60"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="btnSalvarEmpresa_Click"/>
                    
                    <!-- Status -->
                    <TextBlock x:Name="txtStatusEmpresa" 
                               FontSize="12" 
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Configurações do Sistema -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="5" 
                Margin="5,10,10,10"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="⚙️ Configurações do Sistema" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,20"/>
                    
                    <!-- Moeda -->
                    <TextBlock Text="Moeda Padrão:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbMoeda" 
                              Height="35" 
                              FontSize="14"
                              Margin="0,0,0,15"
                              IsEnabled="False">
                        <ComboBoxItem Content="Kwanza (AOA)" IsSelected="True"/>
                    </ComboBox>
                    
                    <!-- Formas de Pagamento -->
                    <TextBlock Text="Formas de Pagamento:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <ListBox x:Name="lstFormasPagamento" 
                             Height="100" 
                             Margin="0,0,0,15"/>
                    
                    <StackPanel Orientation="Horizontal" 
                               Margin="0,0,0,15">
                        <TextBox x:Name="txtNovaFormaPagamento" 
                                 Width="150" 
                                 Height="30" 
                                 FontSize="12"
                                 Margin="0,0,10,0"/>
                        <Button x:Name="btnAdicionarFormaPagamento" 
                                Content="➕ Adicionar" 
                                Height="30" 
                                Width="80"
                                Background="#3498DB"
                                Foreground="White"
                                FontSize="12"
                                BorderThickness="0"
                                Click="btnAdicionarFormaPagamento_Click"/>
                    </StackPanel>
                    
                    <!-- Backup do Banco -->
                    <TextBlock Text="Backup do Banco de Dados:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,20,0,5"/>
                    <Button x:Name="btnBackup" 
                            Content="💾 Fazer Backup" 
                            Height="40" 
                            Background="#F39C12"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0,0,0,10"
                            Click="btnBackup_Click"/>
                    
                    <!-- Restaurar Backup -->
                    <Button x:Name="btnRestaurar" 
                            Content="🔄 Restaurar Backup" 
                            Height="40" 
                            Background="#9B59B6"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0,0,0,20"
                            Click="btnRestaurar_Click"/>
                    
                    <!-- Informações do Sistema -->
                    <Border Background="#ECF0F1" 
                            CornerRadius="5" 
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="ℹ️ Informações do Sistema" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock x:Name="txtVersaoSistema" 
                                       Text="Versão: 1.0.0" 
                                       FontSize="12" 
                                       Foreground="#7F8C8D"/>
                            <TextBlock x:Name="txtBancoDados" 
                                       Text="Banco de Dados: SQL Server" 
                                       FontSize="12" 
                                       Foreground="#7F8C8D"/>
                            <TextBlock x:Name="txtUltimoBackup" 
                                       Text="Último Backup: Não realizado" 
                                       FontSize="12" 
                                       Foreground="#7F8C8D"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page> 