<Page x:Class="SISTEMA_DE_VENDAS_GENERICO.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dashboard"
      Background="Transparent">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Título -->
            <TextBlock Text="📊 Dashboard" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"/>
            
            <!-- Cards de Estatísticas -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Vendas do Dia -->
                <Border Grid.Column="0" 
                        Background="#3498DB" 
                        CornerRadius="10" 
                        Margin="5"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="🛒 Vendas Hoje" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock x:Name="txtVendasHoje" 
                                   Text="0" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                        <TextBlock Text="vendas" 
                                   FontSize="12" 
                                   Foreground="#BDC3C7"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Total do Dia -->
                <Border Grid.Column="1" 
                        Background="#27AE60" 
                        CornerRadius="10" 
                        Margin="5"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="💰 Total Hoje" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock x:Name="txtTotalHoje" 
                                   Text="0,00 Kz" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                        <TextBlock Text="receita" 
                                   FontSize="12" 
                                   Foreground="#BDC3C7"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Produtos em Estoque Baixo -->
                <Border Grid.Column="2" 
                        Background="#E74C3C" 
                        CornerRadius="10" 
                        Margin="5"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="⚠️ Estoque Baixo" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock x:Name="txtEstoqueBaixo" 
                                   Text="0" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                        <TextBlock Text="produtos" 
                                   FontSize="12" 
                                   Foreground="#BDC3C7"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Total de Clientes -->
                <Border Grid.Column="3" 
                        Background="#9B59B6" 
                        CornerRadius="10" 
                        Margin="5"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="👥 Total Clientes" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock x:Name="txtTotalClientes" 
                                   Text="0" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0"/>
                        <TextBlock Text="cadastrados" 
                                   FontSize="12" 
                                   Foreground="#BDC3C7"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Seção de Produtos Mais Vendidos -->
            <Border Background="White" 
                    CornerRadius="10" 
                    Margin="0,20,0,0"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="📈 Produtos Mais Vendidos (Hoje)" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>
                    
                    <DataGrid x:Name="dgProdutosVendidos" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Height="200"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Produto" 
                                                Binding="{Binding NomeProduto}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Quantidade" 
                                                Binding="{Binding QuantidadeVendida}" 
                                                Width="100"/>
                            <DataGridTextColumn Header="Total" 
                                                Binding="{Binding TotalVendido, StringFormat='{}{0:C}'}" 
                                                Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
            
            <!-- Seção de Últimas Vendas -->
            <Border Background="White" 
                    CornerRadius="10" 
                    Margin="0,20,0,0"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="🕒 Últimas Vendas" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,15"/>
                    
                    <DataGrid x:Name="dgUltimasVendas" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Height="200"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Hora" 
                                                Binding="{Binding DataVenda, StringFormat='{}{0:HH:mm}'}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Cliente" 
                                                Binding="{Binding NomeCliente}" 
                                                Width="150"/>
                            <DataGridTextColumn Header="Itens" 
                                                Binding="{Binding QuantidadeItens}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Total" 
                                                Binding="{Binding Total, StringFormat='{}{0:C}'}" 
                                                Width="100"/>
                            <DataGridTextColumn Header="Pagamento" 
                                                Binding="{Binding TipoPagamento}" 
                                                Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page> 