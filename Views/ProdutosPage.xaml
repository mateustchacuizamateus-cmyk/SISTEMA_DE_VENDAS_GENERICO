<Page x:Class="SISTEMA_DE_VENDAS_GENERICO.Views.ProdutosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Produtos"
      Background="Transparent">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- Lista de Produtos -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="5" 
                Margin="10,10,5,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Cabeçalho -->
                <Border Grid.Row="0" 
                        Background="#3498DB" 
                        CornerRadius="5,5,0,0" 
                        Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="📦 Gestão de Produtos" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        
                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal">
                            <Button x:Name="btnNovoProduto" 
                                    Content="➕ Novo Produto" 
                                    Height="35" 
                                    Width="120"
                                    Background="#27AE60"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Margin="0,0,10,0"
                                    Click="btnNovoProduto_Click"/>
                            
                            <Button x:Name="btnEditarProduto" 
                                    Content="✏️ Editar" 
                                    Height="35" 
                                    Width="80"
                                    Background="#F39C12"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Margin="0,0,10,0"
                                    Click="btnEditarProduto_Click"/>
                            
                            <Button x:Name="btnExcluirProduto" 
                                    Content="🗑️ Excluir" 
                                    Height="35" 
                                    Width="80"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Click="btnExcluirProduto_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="1" 
                          x:Name="dgProdutos" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="10"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          SelectionChanged="dgProdutos_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Código" 
                                            Binding="{Binding CodigoBarra}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="Nome" 
                                            Binding="{Binding Nome}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Categoria" 
                                            Binding="{Binding NomeCategoria}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="Preço Compra (AOA)" 
                                            Binding="{Binding PrecoCompra, StringFormat='{}{0:N2} AOA'}" 
                                            Width="140"/>
                        <DataGridTextColumn Header="Preço Venda (AOA)" 
                                            Binding="{Binding PrecoVenda, StringFormat='{}{0:N2} AOA'}" 
                                            Width="140"/>
                        <DataGridTextColumn Header="Estoque" 
                                            Binding="{Binding EstoqueAtual}" 
                                            Width="80"/>
                        <DataGridTextColumn Header="Unidade" 
                                            Binding="{Binding Unidade}" 
                                            Width="80"/>
                        <DataGridCheckBoxColumn Header="Ativo" 
                                               Binding="{Binding Ativo}" 
                                               Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Formulário de Cadastro/Edição -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="5" 
                Margin="5,10,10,10"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="📝 Cadastro de Produto" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,20"/>
                    
                    <!-- Código de Barras -->
                    <TextBlock Text="Código de Barras:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtCodigoBarra" 
                             Height="35" 
                             FontSize="14"
                             Margin="0,0,0,15"/>
                    
                    <!-- Nome do Produto -->
                    <TextBlock Text="Nome do Produto:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtNomeProduto" 
                             Height="35" 
                             FontSize="14"
                             Margin="0,0,0,15"/>
                    
                    <!-- Categoria -->
                    <TextBlock Text="Categoria:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbCategoria" 
                              Height="35" 
                              FontSize="14"
                              Margin="0,0,0,15"/>
                    
                    <!-- Preço de Compra -->
                    <TextBlock Text="Preço de Compra (AOA):" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtPrecoCompra" 
                             Height="35" 
                             FontSize="14"
                             Text="0,00"
                             Margin="0,0,0,15"/>
                    
                    <!-- Preço de Venda -->
                    <TextBlock Text="Preço de Venda (AOA):" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtPrecoVenda" 
                             Height="35" 
                             FontSize="14"
                             Text="0,00"
                             Margin="0,0,0,15"/>
                    
                    <!-- Estoque Inicial -->
                    <TextBlock Text="Estoque Inicial:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="txtEstoqueInicial" 
                             Height="35" 
                             FontSize="14"
                             Text="0"
                             Margin="0,0,0,15"/>
                    
                    <!-- Unidade -->
                    <TextBlock Text="Unidade:" 
                               FontSize="14" 
                               Foreground="#2C3E50"
                               Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbUnidade" 
                              Height="35" 
                              FontSize="14"
                              Margin="0,0,0,15">
                        <ComboBoxItem Content="Unidade"/>
                        <ComboBoxItem Content="Kg"/>
                        <ComboBoxItem Content="Litro"/>
                        <ComboBoxItem Content="Metro"/>
                        <ComboBoxItem Content="Caixa"/>
                        <ComboBoxItem Content="Pacote"/>
                    </ComboBox>
                    
                    <!-- Ativo -->
                    <CheckBox x:Name="chkAtivo" 
                              Content="Produto Ativo" 
                              FontSize="14"
                              IsChecked="True"
                              Margin="0,0,0,20"/>
                    
                    <!-- Botões -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center">
                        <Button x:Name="btnSalvar" 
                                Content="💾 Salvar" 
                                Height="40" 
                                Width="100"
                                Background="#27AE60"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Margin="0,0,10,0"
                                Click="btnSalvar_Click"/>
                        
                        <Button x:Name="btnCancelar" 
                                Content="❌ Cancelar" 
                                Height="40" 
                                Width="100"
                                Background="#E74C3C"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="btnCancelar_Click"/>
                    </StackPanel>
                    
                    <!-- Status -->
                    <TextBlock x:Name="txtStatus" 
                               FontSize="12" 
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page> 