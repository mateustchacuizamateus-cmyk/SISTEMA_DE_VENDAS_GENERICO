<Window x:Class="SISTEMA_DE_VENDAS_GENERICO.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Vendas Angola - Acesso ao Sistema" 
        Height="700" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <!-- Recursos de estilo para Angola -->
    <Window.Resources>
        <!-- Cores da bandeira de Angola -->
        <SolidColorBrush x:Key="VermelhoAngola" Color="#CE1126"/>
        <SolidColorBrush x:Key="PretoAngola" Color="#000000"/>
        <SolidColorBrush x:Key="AmareloAngola" Color="#FFCD00"/>
        
        <!-- Gradientes -->
        <LinearGradientBrush x:Key="GradienteAngola" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#CE1126" Offset="0"/>
            <GradientStop Color="#8B0000" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Estilo para botões -->
        <Style x:Key="BotaoAngola" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource GradienteAngola}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF1126" Offset="0"/>
                                            <GradientStop Color="#A00000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#A01126" Offset="0"/>
                                            <GradientStop Color="#600000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para campos de entrada -->
        <Style x:Key="CampoEntrada" TargetType="Control">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
    </Window.Resources>
    
    <!-- Container principal com sombra -->
    <Border Background="White" 
            CornerRadius="15" 
            Margin="20"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Direction="315" 
                            ShadowDepth="10" 
                            Opacity="0.3" 
                            BlurRadius="20"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Cabeçalho com cores de Angola -->
            <Border Grid.Row="0" 
                    Background="{StaticResource GradienteAngola}" 
                    CornerRadius="15,15,0,0">
                <Grid>
                    <!-- Botão fechar -->
                    <Button x:Name="btnFechar" 
                            Content="✕" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"
                            Width="30" 
                            Height="30" 
                            Margin="10"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="btnFechar_Click"/>
                    
                    <!-- Conteúdo do cabeçalho -->
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <!-- Ícone da aplicação -->
                        <Ellipse Width="60" 
                                Height="60" 
                                Fill="{StaticResource AmareloAngola}"
                                Margin="0,0,0,10">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Black" 
                                                Direction="315" 
                                                ShadowDepth="3" 
                                                Opacity="0.3" 
                                                BlurRadius="5"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        
                        <!-- Texto dentro do ícone -->
                        <TextBlock Text="🛒" 
                                   FontSize="30" 
                                   HorizontalAlignment="Center"
                                   Margin="0,-50,0,20"
                                   Foreground="{StaticResource PretoAngola}"/>
                        
                        <!-- Título -->
                        <TextBlock Text="SISTEMA DE VENDAS" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        
                        <!-- Subtítulo -->
                        <TextBlock Text="República de Angola" 
                                   FontSize="14" 
                                   Foreground="#FFE8E8"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Formulário de Login -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="40,30">
                <StackPanel>
                    
                    <!-- Mensagem de boas-vindas -->
                    <TextBlock Text="Bem-vindo ao Sistema" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    
                    <TextBlock Text="Faça login para continuar" 
                               FontSize="14" 
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    
                    <!-- Campo Usuário -->
                    <TextBlock Text="👤 Nome de Usuário" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               FontSize="13"
                               Margin="0,0,0,8"/>
                    
                    <Border BorderBrush="#E0E0E0" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Margin="0,0,0,20">
                        <TextBox x:Name="txtUsuario" 
                                 Style="{StaticResource CampoEntrada}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalContentAlignment="Center"
                                 KeyDown="txtUsuario_KeyDown"
                                 GotFocus="txtUsuario_GotFocus"/>
                    </Border>
                    
                    <!-- Campo Senha -->
                    <TextBlock Text="🔒 Palavra-passe" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               FontSize="13"
                               Margin="0,0,0,8"/>
                    
                    <!-- Container para senha com botão mostrar/ocultar -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Campo de senha oculta -->
                        <Border Grid.Column="0" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="2,2,0,2" 
                                CornerRadius="8,0,0,8">
                            <PasswordBox x:Name="txtSenha" 
                                         Style="{StaticResource CampoEntrada}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"
                                         KeyDown="txtSenha_KeyDown"
                                         GotFocus="txtSenha_GotFocus"/>
                        </Border>
                        
                        <!-- Campo de senha visível (inicialmente oculto) -->
                        <Border Grid.Column="0" 
                                x:Name="borderSenhaVisivel"
                                BorderBrush="#E0E0E0" 
                                BorderThickness="2,2,0,2" 
                                CornerRadius="8,0,0,8"
                                Visibility="Collapsed">
                            <TextBox x:Name="txtSenhaVisivel" 
                                     Style="{StaticResource CampoEntrada}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     KeyDown="txtSenhaVisivel_KeyDown"
                                     GotFocus="txtSenhaVisivel_GotFocus"/>
                        </Border>
                        
                        <!-- Botão mostrar/ocultar senha -->
                        <Button Grid.Column="1"
                                x:Name="btnMostrarSenha" 
                                Content="👁️" 
                                Width="50"
                                Height="50"
                                Background="#F8F9FA"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,2,2,2"
                                CornerRadius="0,8,8,0"
                                FontSize="16"
                                Cursor="Hand"
                                Click="btnMostrarSenha_Click"
                                ToolTip="Mostrar/Ocultar palavra-passe"/>
                    </Grid>
                    
                    <!-- Checkbox Lembrar -->
                    <CheckBox x:Name="chkLembrar" 
                              Content="Lembrar dados de acesso" 
                              Margin="0,0,0,25"
                              Foreground="#2C3E50"
                              FontSize="13"/>
                    
                    <!-- Botão de Login -->
                    <Button x:Name="btnLogin" 
                            Content="🚀 ENTRAR NO SISTEMA" 
                            Height="50"
                            Style="{StaticResource BotaoAngola}"
                            Margin="0,0,0,15"
                            Click="btnLogin_Click"
                            IsDefault="True"/>
                    
                    <!-- Botão Cancelar -->
                    <Button x:Name="btnCancelar" 
                            Content="❌ CANCELAR" 
                            Height="45"
                            Background="#95A5A6"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="13"
                            BorderThickness="0"
                            CornerRadius="8"
                            Cursor="Hand"
                            Click="btnCancelar_Click"
                            IsCancel="True"/>
                    
                    <!-- Separador -->
                    <Separator Margin="0,25,0,20" Background="#E0E0E0"/>
                    
                    <!-- Informações de teste -->
                    <Border Background="#E8F5E8" 
                            BorderBrush="#27AE60" 
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="💡 Contas de Demonstração" 
                                       FontWeight="Bold" 
                                       Foreground="#27AE60"
                                       FontSize="13"
                                       Margin="0,0,0,8"/>
                            
                            <TextBlock Foreground="#2C3E50" FontSize="11" Margin="0,2">
                                <Run Text="👨‍💼 Administrador:" FontWeight="Bold"/>
                                <Run Text="admin / admin123"/>
                            </TextBlock>
                            
                            <TextBlock Foreground="#2C3E50" FontSize="11" Margin="0,2">
                                <Run Text="👨‍💼 Gerente:" FontWeight="Bold"/>
                                <Run Text="gerente / gerente123"/>
                            </TextBlock>
                            
                            <TextBlock Foreground="#2C3E50" FontSize="11" Margin="0,2">
                                <Run Text="👨‍💼 Vendedor:" FontWeight="Bold"/>
                                <Run Text="vendedor / venda123"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Rodapé -->
            <Border Grid.Row="2" 
                    Background="#F8F9FA" 
                    CornerRadius="0,0,15,15"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Informações do sistema -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Sistema de Vendas Angola v2.0" 
                                   FontSize="11" 
                                   Foreground="#7F8C8D"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Desenvolvido para o mercado angolano" 
                                   FontSize="10" 
                                   Foreground="#BDC3C7"/>
                    </StackPanel>
                    
                    <!-- Status da conexão -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center">
                        <Ellipse x:Name="indicadorConexao" 
                                 Width="8" 
                                 Height="8" 
                                 Fill="#E74C3C" 
                                 Margin="0,0,5,0"/>
                        <TextBlock x:Name="txtStatusConexao" 
                                   Text="Verificando conexão..." 
                                   FontSize="10" 
                                   Foreground="#7F8C8D"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>