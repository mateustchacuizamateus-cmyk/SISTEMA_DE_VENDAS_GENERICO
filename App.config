<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <!-- Configurações de inicialização para .NET Framework 4.8 -->
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
    
    <!-- Strings de conexão otimizadas para Angola -->
    <connectionStrings>
        <!-- Conexão principal - LocalDB para desenvolvimento -->
        <add name="SistemaVendasConnection" 
             connectionString="Data Source=(localdb)\MSSQLLocalDB;Initial Catalog=SistemaVendasAngola;Integrated Security=True;Connect Timeout=30;MultipleActiveResultSets=True;Application Name=SistemaVendasAngola;Pooling=True;Max Pool Size=100;Min Pool Size=5"
             providerName="System.Data.SqlClient" />
        
        <!-- Conexão alternativa - SQL Server para produção -->
        <add name="SistemaVendasConnectionSQLServer" 
             connectionString="Data Source=.;Initial Catalog=SistemaVendasAngola;Integrated Security=True;Connect Timeout=30;MultipleActiveResultSets=True;Application Name=SistemaVendasAngola;Pooling=True;Max Pool Size=100;Min Pool Size=5"
             providerName="System.Data.SqlClient" />
        
        <!-- Conexão para servidor remoto (se necessário) -->
        <add name="SistemaVendasConnectionRemoto" 
             connectionString="Data Source=SERVIDOR_REMOTO;Initial Catalog=SistemaVendasAngola;User Id=usuario;Password=senha;Connect Timeout=30;MultipleActiveResultSets=True;Application Name=SistemaVendasAngola;Encrypt=True;TrustServerCertificate=True"
             providerName="System.Data.SqlClient" />
    </connectionStrings>
    
    <!-- Configurações da aplicação específicas para Angola -->
    <appSettings>
        <!-- Configurações regionais -->
        <add key="Pais" value="Angola" />
        <add key="CodigoPais" value="AO" />
        <add key="Idioma" value="pt-AO" />
        <add key="FusoHorario" value="Africa/Luanda" />
        
        <!-- Configurações monetárias -->
        <add key="MoedaPadrao" value="AOA" />
        <add key="SimboloMoeda" value="Kz" />
        <add key="FormatoMoeda" value="N2" />
        <add key="SeparadorDecimal" value="," />
        <add key="SeparadorMilhares" value="." />
        
        <!-- Configurações fiscais de Angola -->
        <add key="TaxaIVAPadrao" value="14.00" />
        <add key="TaxaIVAReduzida" value="7.00" />
        <add key="TaxaIVAIsenta" value="0.00" />
        
        <!-- Configurações de formato -->
        <add key="FormatoData" value="dd/MM/yyyy" />
        <add key="FormatoDataHora" value="dd/MM/yyyy HH:mm:ss" />
        <add key="FormatoHora" value="HH:mm:ss" />
        
        <!-- Configurações do sistema -->
        <add key="VersaoSistema" value="2.0" />
        <add key="NomeSistema" value="Sistema de Vendas Angola" />
        <add key="DescricaoSistema" value="Sistema de gestão de vendas desenvolvido especificamente para o mercado angolano" />
        
        <!-- Configurações de segurança -->
        <add key="MaxTentativasLogin" value="5" />
        <add key="TempoSessao" value="480" /> <!-- 8 horas em minutos -->
        <add key="LogarTentativasLogin" value="true" />
        
        <!-- Configurações de backup -->
        <add key="BackupAutomatico" value="true" />
        <add key="IntervalBackupHoras" value="24" />
        <add key="DiasManterBackup" value="30" />
        <add key="CaminhoBackup" value="C:\SistemaVendasAngola\Backups" />
        
        <!-- Configurações de impressão -->
        <add key="FormatoPapelPadrao" value="A4" />
        <add key="MargemSuperior" value="2.0" />
        <add key="MargemInferior" value="2.0" />
        <add key="MargemEsquerda" value="2.0" />
        <add key="MargemDireita" value="2.0" />
        
        <!-- Configurações de relatórios -->
        <add key="CaminhoRelatorios" value="C:\SistemaVendasAngola\Relatorios" />
        <add key="FormatoExportacaoPadrao" value="PDF" />
        
        <!-- Configurações de log -->
        <add key="HabilitarLog" value="true" />
        <add key="NivelLog" value="INFO" /> <!-- DEBUG, INFO, WARNING, ERROR -->
        <add key="CaminhoLog" value="C:\SistemaVendasAngola\Logs" />
        <add key="TamanhoMaximoLogMB" value="10" />
        
        <!-- Configurações de performance -->
        <add key="TimeoutConsulta" value="30" />
        <add key="TamanhoPoolConexao" value="100" />
        <add key="CacheHabilitado" value="true" />
        <add key="TempoExpiraCacheMinutos" value="30" />
        
        <!-- Configurações de interface -->
        <add key="TemaPadrao" value="Claro" />
        <add key="CorPrimaria" value="#CE1126" /> <!-- Vermelho da bandeira de Angola -->
        <add key="CorSecundaria" value="#FFCD00" /> <!-- Amarelo da bandeira de Angola -->
        <add key="CorTerciaria" value="#000000" /> <!-- Preto da bandeira de Angola -->
        
        <!-- Configurações de validação -->
        <add key="ValidarCPF" value="false" /> <!-- Angola não usa CPF -->
        <add key="ValidarCNPJ" value="false" /> <!-- Angola não usa CNPJ -->
        <add key="ValidarNIF" value="true" /> <!-- Angola usa NIF -->
        <add key="FormatoTelefone" value="+244 9XX XXX XXX" />
        
        <!-- Configurações específicas de Angola -->
        <add key="ProvinciasPrincipais" value="Luanda,Benguela,Huambo,Lobito,Cabinda,Huíla,Malanje,Namibe,Soyo,Uíge" />
        <add key="CidadePadrao" value="Luanda" />
        <add key="ProvinciaPadrao" value="Luanda" />
        
        <!-- Configurações de numeração de documentos -->
        <add key="SerieDocumentoPadrao" value="A" />
        <add key="FormatoNumeroFatura" value="FAT{0:000000}" />
        <add key="FormatoNumeroRecibo" value="REC{0:000000}" />
        <add key="FormatoNumeroVenda" value="VD{0:000000}" />
        
        <!-- Configurações de email (se necessário) -->
        <add key="ServidorSMTP" value="" />
        <add key="PortaSMTP" value="587" />
        <add key="EmailRemetente" value="" />
        <add key="SenhaEmailRemetente" value="" />
        <add key="UsarSSL" value="true" />
        
        <!-- Configurações de atualização -->
        <add key="VerificarAtualizacoes" value="true" />
        <add key="URLAtualizacoes" value="" />
        <add key="IntervalVerificacaoHoras" value="24" />
    </appSettings>
    
    <!-- Configurações de runtime -->
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <!-- Redirecionamentos de assembly se necessário -->
        </assemblyBinding>
        
        <!-- Configurações de garbage collection otimizadas -->
        <gcServer enabled="true" />
        <gcConcurrent enabled="true" />
    </runtime>
    
    <!-- Configurações de sistema -->
    <system.data>
        <DbProviderFactories>
            <!-- Providers de banco de dados -->
            <add name="SqlClient Data Provider" 
                 invariant="System.Data.SqlClient" 
                 description=".Net Framework Data Provider for SqlServer" 
                 type="System.Data.SqlClient.SqlClientFactory, System.Data, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
        </DbProviderFactories>
    </system.data>
    
    <!-- Configurações de diagnóstico -->
    <system.diagnostics>
        <trace autoflush="true">
            <listeners>
                <add name="fileListener" 
                     type="System.Diagnostics.TextWriterTraceListener" 
                     initializeData="C:\SistemaVendasAngola\Logs\trace.log" />
            </listeners>
        </trace>
    </system.diagnostics>
    
    <!-- Configurações de rede (se necessário) -->
    <system.net>
        <defaultProxy enabled="false" />
        <settings>
            <httpWebRequest useUnsafeHeaderParsing="false" />
        </settings>
    </system.net>
    
    <!-- Configurações de configuração do usuário -->
    <userSettings>
        <SISTEMA_DE_VENDAS_GENERICO.Properties.Settings>
            <setting name="UltimoUsuario" serializeAs="String">
                <value />
            </setting>
            <setting name="LembrarUsuario" serializeAs="String">
                <value>False</value>
            </setting>
            <setting name="TemaEscolhido" serializeAs="String">
                <value>Claro</value>
            </setting>
            <setting name="IdiomaEscolhido" serializeAs="String">
                <value>pt-AO</value>
            </setting>
            <setting name="UltimaJanelaMaximizada" serializeAs="String">
                <value>True</value>
            </setting>
            <setting name="UltimaPosicaoX" serializeAs="String">
                <value>0</value>
            </setting>
            <setting name="UltimaPosicaoY" serializeAs="String">
                <value>0</value>
            </setting>
            <setting name="UltimaLargura" serializeAs="String">
                <value>1200</value>
            </setting>
            <setting name="UltimaAltura" serializeAs="String">
                <value>800</value>
            </setting>
        </SISTEMA_DE_VENDAS_GENERICO.Properties.Settings>
    </userSettings>
</configuration>